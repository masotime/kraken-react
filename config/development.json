{

    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "cache": true,
                        "helpers": [
                            {
                                "name": "dust-react",
                                "arguments": [ { "relativePath": "public/js/react" } ]
                            }
                        ]
                    }
                ]
            }
        }
    },

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        "css": {
                            "module": "kraken-devtools/plugins/less",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        },
                        "jsx": {
                            "module": "kraken-jsx-devtools",
                            "files": "/js/**/*.js",
                            "ext": "jsx"
                        }
                    }
                ]
            }
        }
    }
}
